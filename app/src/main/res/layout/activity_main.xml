<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivlogomain"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/btnrestaurante"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Em Restaurante"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/main_orange"
        android:layout_below="@+id/ivlogomain"/>

    <Button
        android:id="@+id/btntakeaway"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Take-Away"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/main_orange"
        android:layout_below="@+id/btnrestaurante"/>

    <Button
        android:id="@+id/btnsignout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btntakeaway"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/transparent"
        android:text="Sign Out"
        android:textColor="#485671" />

</RelativeLayout>